{
    "name": "__MSG_appName__",
    "description": "__MSG_appDescription__",
    "version": "3",
    "manifest_version": 2,
    "default_locale": "en",
    "permissions": [
        "app.runtime",
        "app.window",
        "fullscreen",
        "geolocation",
        "notifications",
        "storage",
        "unlimitedStorage",
        "<all_urls>",
        "http://*/*",
        "https://*/*",
        "http://127.0.0.1/*"
    ],
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "app": {
        "background": {
            "scripts": [
                "scripts/main.js",
                "scripts/chromereload.js"
            ]
        }
    },
    "web_accessible_resources": "images/icon-48.png"
}